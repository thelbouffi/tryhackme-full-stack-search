{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "baseUrl": "./", 
    "paths": {    
      "src/*": ["src/*"]
    }
  },
  "typeRoots": ["./node_modules/@types", "./src/utils/type-definitions"],
  "include": ["src/**/*.ts", "src/tests/**/*.ts", "src/utils/type-definitions"],
  "exclude": ["node_modules"]
}